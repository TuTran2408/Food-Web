@model IEnumerable<WebNauAn.Models.Congthuc>

@{
    ViewData["Title"] = "DanhMucCongThuc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>DanhMucCongThuc</h1>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<p>
    <a asp-action="ThemSanPhamMoi">Create New</a>
</p>
<table class="table" style="width:100%; white-space:nowrap;table-layout:fixed">
    <thead>
        <tr class ="table-warning">
            <th>
                TenCongThuc
            </th>
            <th>
               ThoiGianChuanBi
            </th>
            <th>
               TongThoiGianNau
            </th>
            <th>
               PhucVu
            </th>
            <th>
               TacGia
            </th>
            <th>
               Anh
            </th>
            <th>
               AnhChiTiet
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @{
            int i = 0;
            string @cls = "table-success";
        }
@foreach (var item in Model) {
             i = i + 1;
            cls = "table-success";
            if(i%2==0){
                cls = "table-primary";
            }
            <tr class="@cls">
            <td>
                @Html.DisplayFor(modelItem => item.TenCongThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiGianChuanBi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongThoiGianNau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TacGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhChiTiet)
            </td>
            <td>
                <a asp-action="SuaSanPham" asp-route-macongthuc="@item.MaCongThuc">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaCongThuc">Details</a> |
                <a asp-action="XoaSanPham" asp-route-macongthuc="@item.MaCongThuc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
