@model IEnumerable<WebNauAn.Models.Congthuc>

@{
    ViewData["Title"] = "DanhMucCongThuc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>DanhMucCongThuc</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
